<div class="container">

  <div class="page-header">
    <h2>Add a question to the library</h2>
    <p class="lead">Know a great marketing question? Contribute to the library and give back to your peers.</p>
  </div>

  <% if current_user %>

  <!-- Form id name needed for Javascript; please advise if you change -->
  <!-- Class .answers and .answer necesserary; please advise if you change so we update javascript -->

    <form id="question-form" method="post" action="/questions">

      <div class="form-group">
        <label for="content">Question:</label>
        <input type="text" class="form-control" name="content" placeholder="Your question" value="<%= @new_question.content if @new_question %>">
      </div>

      <div class="form-group">
        <label for="tags">Add some tags to your question:</label>
        <select multiple class="form-control" name="tags[]">
            <% Tag.all.each do |tag| %>
                <option value="<%= tag.name %>"><%= tag.name %></option>
            <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="image">Embed an image in your question:</label>
        <input type="url" class="form-control" name="image_url" placeholder="image url" value="<%= @new_question.image if @new_question %>">
      </div>

      <div class="form-group">
        <label for="no_of_answers">How many answers do you want to add for this question? (min. 2, max. 5)</label>
        <button class="add_answer btn btn-default">+</button> <button class="remove_answer btn btn-default">-</button>
      </div>

      <div class="answers">

        <div class="answer form-group">
          <label for="answer1_content">Answer 1:</label>
          <input type="text" name="answer1_content" class="answer_content form-control">
          <label for="answer1_correct">Correct?</label>
            <input type="radio" name="answer1_correct" value="true">Yes
            <input type="radio" name="answer1_correct" value="false">No
        </div>

        <div class="answer form-group">
          <label for="answer2_content">Answer 2:</label>
          <input type="text" name="answer2_content" class="answer_content form-control">
          <label for="answer2_correct">Correct?</label>
          <input type="radio" name="answer2_correct" value="true">Yes
          <input type="radio" name="answer2_correct" value="false">No
        </div>

        <div class="answer form-group">
          <label for="answer3_content">Answer 3:</label>
          <input type="text" name="answer3_content" class="answer_content form-control">
          <label for="answer3_correct">Correct?</label>
          <input type="radio" name="answer3_correct" value="true">Yes
          <input type="radio" name="answer3_correct" value="false">No
        </div>

        <div class="answer form-group">
          <label for="answer4_content">Answer 4:</label>
          <input type="text" name="answer4_content" class="answer_content form-control">
          <label for="answer4_correct">Correct?</label>
          <input type="radio" name="answer4_correct" value="true">Yes
          <input type="radio" name="answer4_correct" value="false">No
        </div>

        <div class="answer form-group">
          <label for="answer5_content">Answer 5:</label>
          <input type="text" name="answer5_content" class="answer_content form-control">
          <label for="answer5_correct">Correct?</label>
          <input type="radio" name="answer5_correct" value="true">Yes
          <input type="radio" name="answer5_correct" value="false">No
        </div>

      </div>

      <div id="submit_button">
        <button class="btn btn-default" type="submit">Submit</button>
      </div>

    </form>

  <% else %>

    <div>
        <strong>Access restricted. Please login first!</strong>
    </div>

  <% end %>

</div>
